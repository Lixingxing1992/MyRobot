<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <GridLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:columnCount="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_review"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="预览效果图"
                android:onClick="btnClick"/>
        <Button
                android:id="@+id/btn_scan"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="扫一扫"
                android:onClick="btnClick"/>
        <Button
                android:id="@+id/btn_redis_face"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="redis获取人脸数据"
                android:onClick="btnClick"/>
        <Button
                android:id="@+id/btn_redis_sn"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="Redis获取设备SN"
                android:onClick="btnClick"/>

        <Button
                android:id="@+id/btn_redis_stock"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="Redis获取库存"
                android:onClick="btnClick"/>
        <Button
                android:id="@+id/btn_rabbit"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="rabitMQ"
                android:onClick="btnClick"/>

        <Button
                android:id="@+id/btn_redis_speech"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="语音合成"
                android:onClick="btnClick"/>

        <Button
                android:id="@+id/btn_setting"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="设置"
                android:onClick="btnClick"/>
        <Button
                android:id="@+id/btn_main"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="60dp"
                android:text="进入首页"
                android:onClick="btnClick"/>
    </GridLayout>
</android.support.constraint.ConstraintLayout>