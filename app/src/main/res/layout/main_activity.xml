<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@mipmap/main_bg"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ImageView
            android:id="@+id/main_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/main_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <FrameLayout
            android:id="@+id/main_dialog"
            android:background="@mipmap/main_dialog_bg"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_141"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/main_dialog_text"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:text="在虚线框内\n一笔画出你的心情"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

    <ImageView
            android:id="@+id/main_btn_kefu"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/main_btn_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/main_btn_qianggou"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/main_btn_kefu"
            android:src="@mipmap/main_btn_qianggou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/main_bg2"
            android:clickable="true"
            android:background="#60000000"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageView
            android:id="@+id/main_btn_reset"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/main_btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/main_btn_sure"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/main_btn_reset"
            android:src="@mipmap/main_btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/main_robot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/main_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.myrobot.org.view.MyDrawView
            android:id="@+id/myDrawView"
            android:layout_marginTop="@dimen/dp_224"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.myrobot.org.view.MyBatterView
            android:id="@+id/myBatterView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_10"/>

</android.support.constraint.ConstraintLayout>